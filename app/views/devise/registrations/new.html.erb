<div class="row">
  <%= devise_error_messages! %>
  <div class="col col-login mx-auto">
    <%= render 'partial/hackathonlogo', local_assigns: {width: "70%", height: "70%"}%>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "card"}) do |f| %>
      <div class="card-body p-6">
        <div class="card-title">Create new account</div>
        <div class="form-group">
          <label class="form-label">First name</label>
          <%= f.text_field :first_name, placeholder: "Enter First Name", autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">Last name</label>
          <%= f.text_field :last_name, placeholder: "Enter Last Name", class: "form-control"%>
        </div>
        <div class="form-group">
          <label class="form-label">Email address</label>
          <%= f.email_field :email, placeholder: "Enter Email", class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">Password</label>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control"%>
        </div>
        <div class="form-group">
          <label class="form-label">Confirm Password</label>
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "off", class: "form-control" %>
        </div>
        <%= flash[:recaptcha_error] %>
        <%= recaptcha_tags %>
        <div class="form-footer">
          <button type="submit" class="btn btn-primary btn-block">Create new account</button>
        </div>
      </div>
    <% end %>
    <div class="text-center text-muted">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>